<mvc:View
        controllerName="rroot.controller.Application"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m">
    <mvc:XMLView viewName="rroot.view.HeadToolBar"/>
    <Panel height="100%">
        <content>
            <Breadcrumbs currentLocationText="Home">
            </Breadcrumbs>
        </content>
        <content>
            <Table
                class="sapUiResponsiveMargin"
                width="auto"
                inset="false"
                items="{oData>/FlightScarrSet}">
                <headerToolbar>
                    <Toolbar>
                        <Link
                            type="Navigation"
                            press="onPress"
                            text="Airline List (More detail)"
                            subtle="true"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Airline" />
                    </Column>
                    <Column>
                        <Text text="Flight Number" />
                    </Column>
                    <Column>
                        <Text text="Airline Currency" />
                    </Column>
                    <Column>
                        <Text text="URL" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier
                                    title="{oData>Carrid}"/>
                            <Text
                                    text="{oData>Carrname}"/>
                            <Text
                                    text="{oData>Currcode}"/>
                            <Text
                                    text="{oData>Url}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <content>
            <Table
                class="sapUiResponsiveMargin"
                width="auto"
                inset="false"
                items="{oData>/FlightSpfliSet}">
                <headerToolbar>
                    <Toolbar>
                        <Link
                            type="Navigation"
                            press="onSchema"
                            text="Flight Schedule"
                            subtle="true"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Airline Code" />
                    </Column>
                    <Column>
                        <Text text="Flight Connection Number" />
                    </Column>
                    <Column>
                        <Text text="Departure country" />
                    </Column>
                    <Column>
                        <Text text="Departure city" />
                    </Column>
                    <Column>
                        <Text text="Departure airport" />
                    </Column>
                    <Column>
                        <Text text="Arrival country" />
                    </Column>
                    <Column>
                        <Text text="Arrival city" />
                    </Column>
                    <Column>
                        <Text text="Destination airport" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier
                                    title="{oData>Carrid}"/>
                            <Text
                                    text="{oData>Connid}"/>
                            <Text
                                    text="{oData>Countryfr}"/>
                            <Text
                                    text="{oData>Cityfrom}"/>
                            <Text
                                    text="{oData>Airpfrom}"/>
                            <Text
                                    text="{oData>Countryto}"/>
                            <Text
                                    text="{oData>Cityto}"/>
                            <Text
                                    text="{oData>Airpto}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <content>
            <Table
                    class="sapUiResponsiveMargin"
                    width="auto"
                    inset="false"
                    items="{oData>/FlightSflightSet}">
                <headerToolbar>
                    <Toolbar>
                        <Link
                                type="Navigation"
                                press="onInfo"
                                text="Flight Information"
                                subtle="true"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Airline Code" />
                    </Column>
                    <Column>
                        <Text text="Flight Connection Number" />
                    </Column>
                    <Column>
                        <Text text="Flight Date" />
                    </Column>
                    <Column>
                        <Text text="Airfare" />
                    </Column>
                    <Column>
                        <Text text="Airline local currency" />
                    </Column>
                    <Column>
                        <Text text="Plane Type" />
                    </Column>
                    <Column>
                        <Text text="Maximum capacity economy class" />
                    </Column>
                    <Column>
                        <Text text="Maximum capacity business class" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier
                                    title="{oData>Carrid}"/>
                            <Text
                                    text="{oData>Connid}"/>
                            <Text
                                    text="{oData>Fldate}"/>
                            <Text
                                    text="{oData>Price}"/>
                            <Text
                                    text="{oData>Currency}"/>
                            <Text
                                    text="{oData>Planetype}"/>
                            <Text
                                    text="{oData>Seatsmax}"/>
                            <Text
                                    text="{oData>SeatsmaxB}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Panel>
</mvc:View>